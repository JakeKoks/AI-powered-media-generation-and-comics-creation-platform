# 🚀 AI Comics Backend Environment Configuration
# Containerized Development Setup

# 🌐 Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# 💾 Database Configuration (Container Network)
# Using postgres service name instead of localhost
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/aicomics

# 💾 Individual Database vars (for fallback)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aicomics
DB_USER=postgres
DB_PASSWORD=postgres123

# 🗄️ Redis Configuration (Container Network)
REDIS_URL=redis://redis:6379

# 🔐 JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# 📁 File Storage Configuration (MinIO S3-compatible)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=ai-comics

# 🔒 Security Configuration
CORS_ORIGIN=http://localhost:3001
SESSION_SECRET=your-super-secret-session-key-change-in-production
BCRYPT_ROUNDS=12

# 📊 Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# 🐛 Debug Configuration
LOG_LEVEL=debug
ENABLE_SQL_LOGGING=true
