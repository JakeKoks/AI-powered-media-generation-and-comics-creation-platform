# AI Media & Comics Website - Environment Configuration
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/aicomics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aicomics
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-must-be-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# MinIO S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=ai-comics-media
MINIO_REGION=us-east-1

# AI Worker Configuration
AI_WORKER_URL=http://localhost:8000
COMFYUI_URL=http://localhost:8188
GPU_ENABLED=false
MAX_CONCURRENT_JOBS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_GUEST_MAX=100
RATE_LIMIT_USER_MAX=1000
RATE_LIMIT_ADMIN_MAX=5000

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_USER=1000
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/webm,image/gif

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ai-comics.com

# Home Assistant Integration
HOME_ASSISTANT_URL=http://homeassistant:8123
HOME_ASSISTANT_TOKEN=your-long-lived-access-token
HOME_ASSISTANT_ENABLED=false

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production

# Monitoring & Logging
LOG_LEVEL=debug
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
FEATURE_AI_GENERATION=true
FEATURE_COMICS_BUILDER=true
FEATURE_VIDEO_GENERATION=true
FEATURE_SMART_HOME=false
FEATURE_ANALYTICS=true

# Legal & Compliance
GDPR_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365
PRIVACY_POLICY_URL=http://localhost:3000/privacy
TERMS_OF_SERVICE_URL=http://localhost:3000/terms

# Development Settings
DEBUG=true
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_AI_RESPONSES=false
SKIP_EMAIL_VERIFICATION=true

# Production Settings (override in production)
# NODE_ENV=production
# DEBUG=false
# HOT_RELOAD=false
# SOURCE_MAPS=false
# SKIP_EMAIL_VERIFICATION=false
# DATABASE_URL=postgresql://username:password@production-db:5432/aicomics
# REDIS_URL=redis://production-redis:6379
# JWT_SECRET=production-jwt-secret-64-characters-minimum-length-required
# JWT_REFRESH_SECRET=production-refresh-secret-64-characters-minimum-length-required
